

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="ProfileList[@ViewBag.i].Name" class="control-label">Profile thứ @(ViewBag.i + 1)</label>
            @Html.Editor("Profile[" + ViewBag.i + "].Name", new { htmlAttributes = new { @class = "form-control", @required = "required", @Value = "Profile" + (i + 1).ToString() } })
            <div class="mt-2">
                @Html.ValidationMessage("Profile[" + i + "].Name", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="ProfileList[@i].Name" class="control-label">Mã PIN cho Profille @(i+1)</label>
            @Html.Editor("Profile[" + i + "].Pincode", new { htmlAttributes = new { @class = "form-control", @Value = "111" + (i + 1) } })
            <div class="mt-2">
                @Html.ValidationMessage("Profile[" + i + "].Pincode", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>