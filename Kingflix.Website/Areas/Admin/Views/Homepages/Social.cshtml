@model IEnumerable<Kingflix.Domain.DomainModel.Homepage>
@{
    ViewBag.Title = "Chỉnh sửa Footer Social";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="clearfix">
                    <h4 class="card-title mt-2 float-left">@ViewBag.Title</h4>
                </div>
                <hr />
                @using (Html.BeginForm("Social", "Homepages", FormMethod.Post, new { enctype = "multipart/form-data", @id = "BlogForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="Facebook">Facebook Link</label>
                        <input class="form-control" value="@Model.Where(a=>a.Title=="FACEBOOK").FirstOrDefault().Link" placeholder="Nhập content ở đây" id="Facebook" name="Facebook" />
                    </div>
                    <div class="form-group">
                        <label for="Youtube">Youtube Link</label>
                        <input class="form-control" value="@Model.Where(a=>a.Title=="YOUTUBE").FirstOrDefault().Link" placeholder="Nhập content ở đây" id="Youtube" name="Youtube" />
                    </div>
                    <div class="form-group">
                        <label for="Instagram">Instagram Link</label>
                        <input class="form-control" value="@Model.Where(a=>a.Title=="INSTAGRAM").FirstOrDefault().Link" placeholder="Nhập content ở đây" id="Instagram" name="Instagram" />
                    </div>
                    <div class="text-center">
                        <button class="btn btn-success btn-sm px-3">Cập nhật</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>