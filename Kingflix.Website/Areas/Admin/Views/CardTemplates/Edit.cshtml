@model Kingflix.Domain.DomainModel.CardTemplate

@{
    ViewBag.Title = "Sửa mẫu thiệp";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "CardTemplates", FormMethod.Post, new { enctype = "multipart/form-data", @id = "BlogForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-white mb-4">Sửa mẫu thiệp</h5>
                    <div class="form-group mb-4 mt-0">
                        <label for="Title" class="control-form-label">Tiêu đề mẫu thiệp</label>
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control bg-white", @placeholder = "Nhập tiêu đề" })
                        <div class="mt-1">
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group mt-0">
                        <label for="Content" class="control-form-label">Nội dung mẫu thiệp</label>
                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })

                    </div>
                    <div class="text-center">
                        <button class="btn btn-rounded btn-success" type="submit">Hoàn tất</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

    </script>
}