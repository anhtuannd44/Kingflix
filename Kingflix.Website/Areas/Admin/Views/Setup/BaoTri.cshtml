@model Kingflix.Domain.DomainModel.Setting

@{
    ViewBag.Title = "Cài đặt trang bảo trì";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateBaoTri", "Setup", FormMethod.Post, new { enctype = "multipart/form-data", @id = "BlogForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SettingId)
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mt-2 mb-4">Cài đặt trang bảo trì</h4>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="mt-2">
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control textarea text-area-1" })
                        <div class="mt-2">
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            @*Submit Form Card*@
            <div class="card">
                <div class="card-body py-0">
                    <h6 class=" my-4">Trạng thái hiển thị</h6>
                    <div class="form-group">
                        <button type="submit" id="submitFormButton" class="btn btn-gradient-primary btn-rounded btn-block px-1">Hoàn tất</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
