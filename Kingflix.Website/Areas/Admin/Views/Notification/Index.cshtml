@using Kingflix.Domain.Enumerables
@model IEnumerable<Kingflix.Models.ViewModel.NotificationViewModel>
@{
    ViewBag.Title = "Thông báo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title mt-2">@ViewBag.Title</h4>
        <hr />
        @if (Model.Count() != 0)
        {
            <table class="table table-bordered table-hover"
                   id="tableSort"
                   data-toggle="table"
                   data-search="true"
                   data-sort-name="name"
                   data-sort-order="desc"
                   data-pagination="true"
                   data-page-size="10">
                <thead>
                    <tr>
                        <th class="text-center font-weight-bold" data-sortable="true"> Thời gian </th>
                        <th class="font-weight-bold" data-sortable="true"> Tiêu đề </th>
                        <th class="font-weight-bold" data-sortable="true"> Nội dung </th>
                        <th class="text-center font-weight-bold" data-sortable="true"> Loại thông báo </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.DateCreated.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                <a href="@item.Link" class="text-success">
                                    @item.Title
                                </a>
                            </td>
                            <td>
                                @item.Content
                            </td>
                            <td class="text-center">
                                @if (item.Type == NotificationType.Order)
                                {
                                    <p class="m-0 badge badge-success">Đơn hàng</p>
                                }
                                else
                                {
                                    <p class="m-0 badge badge-danger">Báo lỗi</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">Không có thông báo nào</p>
        }
    </div>
</div>

