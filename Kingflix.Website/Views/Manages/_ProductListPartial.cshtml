@model IEnumerable<Kingflix.Domain.DomainModel.User_Profile>

@if (Model.Count() != 0)
{
    <table class="table table-bordered table-hover" id="tableSort">
        <thead class="bg-light">
            <tr>
                <th class="text-center font-weight-bold"> Tài khoản </th>
                <th class="text-center font-weight-bold"> Mật khẩu </th>
                <th class="text-center font-weight-bold"> Profile </th>
                <th class="text-center font-weight-bold"> Mã PIN </th>
                <th class="text-center font-weight-bold"> Ngày hết hạn </th>
                <th class="text-center font-weight-bold"> Tình trạng </th>
                <th class="text-center font-weight-bold"> Hành động </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Profiles.Products.ProductId
                    </td>
                    <td>
                        @item.Profiles.Products.Password
                    </td>
                    <td>
                        @item.Profiles.Name
                    </td>
                    <td>
                        @item.Profiles.Pincode
                    </td>
                    <td class="text-center">
                        @item.DateStart.ToString("dd/MM/yyyy")
                    </td>
                    <td class="text-center">
                        @item.DateEnd.ToString("dd/MM/yyyy")
                    </td>
                    <td class="text-center">
                        <a href="#" class="btn btn-primary btn-sm" data-toggle="tooltip" data-title="Gia hạn"><i class="mdi mdi-history"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="my-5">
        <p class="text-light text-center">Bạn chưa có đơn hàng nào</p>
        <div class="text-center">
            <a href="@Url.Action("Step1","Order")" class="btn btn-gradient-primary btn-sm btn-rounded">Lên đơn hàng ngay</a>
        </div>
    </div>

}