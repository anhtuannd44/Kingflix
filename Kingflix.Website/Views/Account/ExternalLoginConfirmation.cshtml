@model Kingflix.Website.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_HomepageLayout.cshtml";
}

<section class="section-home pt-0" style="background: url('../Content/image/bg-main.jpg'); height: 100vh;">
    <div class="position-absolute w-100">
        <nav class="navbar bg-transparent px-5 py-3">
            <a class="brand-logo" href="~/"><img src="~/Content/image/logo.png" alt="logo" height="80" /></a>
        </nav>
    </div>
    <div class="container-fluid h-100">
        <div class="row flex-grow my-auto h-100 align-items-center">
            <div class="col-md-4 col-sm-4 mx-auto">
                <div class="auth-form-light login-form text-left">
                    <h2 class="text-white mb-3">Bổ sung thông tin</h2>
                    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-white" })
                        <div class="form-group">
                            <input class="form-control form-control-lg" id="Email" name="Email" placeholder="Email" type="text" value="@Model.Email" hidden>
                            <input class="form-control form-control-lg" type="text" value="@Model.Email" disabled>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control form-control-lg", @placeholder = "Họ và tên" })
                            <div class="mt-2">
                                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-lg", @placeholder = "Số điện thoại" })
                            <div class="mt-2">
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn btn-rounded">Hoàn tất</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}