@model Kingflix.Website.Models.UserLoginViewModel

@{
    ViewBag.Title = "Đăng nhập - Kingflix";
    Layout = "~/Views/Shared/_HomepageLayout.cshtml";
}
<section class="section-home pt-0" style="background: url('../Content/image/bg-main.jpg'); height: 100vh;">
    <div class="position-absolute w-100">
        <nav class="navbar bg-transparent px-5 py-3">
            <a class="brand-logo" href="~/"><img src="~/Content/image/logo.png" alt="logo" height="80" /></a>
        </nav>
    </div>
    <div class="container-fluid h-100">
        <div class="row flex-grow my-auto h-100 align-items-center">
            <div class="col-md-4 col-lg-4 mx-auto">
                <div class="auth-form-light login-form text-left">
                    <h2 class="text-white">Đăng nhập</h2>
                    @using (Html.BeginForm("Login", "Account"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-white" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @placeholder = "Email" })
                            <div class="mt-2">
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Mật khẩu" })
                        </div>
                        <div class="form-check">
                            <label class="form-check-label text-muted form-check-warning">
                                <input type="checkbox" id="RememberMe" name="RememberMe" class="form-check-input" value="true"> Ghi nhớ đăng nhập <i class="input-helper"></i>
                                <input name="RememberMe" type="hidden" value="false">
                            </label>
                        </div>
                       
                        <div class="mt-3">
                            <button type="submit" class="btn btn-block btn-warning text-black btn-lg font-weight-medium auth-form-btn btn-rounded">Đăng nhập</button>
                        </div>
                        <div class="mt-3 text-center">
                            <a href="@Url.Action("ForgotPassword")" class="auth-link text-light">Quên mật khẩu?</a>
                        </div>
                        <div class="text-center mt-1 font-weight-light text-white mb-3">
                            <p class="mt-2 mb-0">Bạn chưa có tài khoản?</p>
                            <a href="@Url.Action("Register", new { ReturnUrl = ViewBag.ReturnUrl })" class="text-warning">Tạo tài khoản ngay</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}